<script type="text/html" id="TelephoneTemplate">
    <label>Код:</label><br />
    <select data-bind="options: telCodes, value: code"></select><br />
    <label>Телефон:</label><br />
    <input type="text" data-bind="value: telephone, masked: { mask: telephoneMask, definitions: maskDefs }" /><br />
    <label>Сумма:</label><br />
    <input data-bind="spinner: { value: sum, options: { min: 0, precision: 0 } }" />
</script>

<script type="text/html" id="BeltelecomInternetTemplate">
    <label>Номер:</label><br />
